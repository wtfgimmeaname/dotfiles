escape ^jj

shell                 bash
shelltitle            "$ !sh:"

activity              "activity in %n (%t)"
bell_msg              "bell in %n (%t)"
defhstatus            "screen: ^En (^Et)"

vbell           on
vbell_msg       "WHAT ??!!"
vbellwait       1

msgminwait      1
msgwait         3

#termcapinfo xterm-color ti@:te@         # Allow terminal scrolling
termcapinfo  * '' 'hs:ts=\E_:fs=\E\\:ds=\E_\E\\'
defscrollback 10000                     # large scroll back
startup_message off                     # Turn off the splash screen
bind . sessionname

# Start some screens up
screen -t "view" 0
screen -t "modcon" 1
screen -t "git" 2
screen -t "console" 3
screen -t "util" 4
screen -t "server" 5
screen -t "logs" 6
screen -t "mysql" 7
screen -t "remote" 8
screen -t "sudo" 9

backtick 0 30 30 sh -c 'screen -ls | grep --color=no -o "$PPID[^[:space:]]*" | awk -F . "{print \$2}"'

