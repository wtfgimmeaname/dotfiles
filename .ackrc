--pager=less -R

# Colors
--color-filename=bold red
--color-match=bold green

# Flush output immediately, even when piped
--flush

# Force color and header, even in less -R.
--color
--group

# Add jst and eco
--type-add
html=.jst,.eco

# Add Sass and Scss
--type-add
css=.scss,.sass

# Add coffeescript
--type-add
js=.js,.coffee

# Exclude compiled directories
# --ignore-dir
# template/compiled
